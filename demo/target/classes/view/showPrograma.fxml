<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800" prefWidth="1200" stylesheets="@../styles/profesor.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controllerFXML.ShowProgramaController">

    <!-- MENÚ LATERAL -->
    <left>
        <VBox styleClass="sidebar" maxWidth="280.0" minWidth="280.0" prefWidth="280.0">


            <Separator styleClass="sidebar-separator" />

            <!-- Navegación Principal -->
            <VBox styleClass="nav-section" spacing="4">
                <padding>
                    <Insets top="16" left="16" right="16" bottom="8" />
                </padding>

                <Label text="MENÚ PRINCIPAL" styleClass="nav-section-title">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>

                <Button onAction="#mostrarInicio" prefWidth="248" text="🏠 Inicio"
                        styleClass="nav-button" />
                <Button onAction="#mostrarProfesores" prefWidth="248" text="👨‍🏫 Profesores"
                        styleClass="nav-button" />
                <Button onAction="#mostrarEstudiantes" prefWidth="248" text="👨‍🎓 Estudiantes"
                        styleClass="nav-button" />
            </VBox>

            <Separator styleClass="nav-separator" />

            <!-- Navegación Académica -->
            <VBox styleClass="nav-section" spacing="4">
                <padding>
                    <Insets top="8" left="16" right="16" bottom="8" />
                </padding>

                <Label text="GESTIÓN ACADÉMICA" styleClass="nav-section-title">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>

                <Button onAction="#mostrarFacultades" prefWidth="248" text="🏛️ Facultades"
                        styleClass="nav-button" />
                <Button onAction="#mostrarProgramas" prefWidth="248" text="📚 Programas"
                        styleClass="nav-button" />
                <Button onAction="#mostrarCursos" prefWidth="248" text="📖 Cursos"
                        styleClass="nav-button" />
                <Button onAction="#mostrarInscripciones" prefWidth="248" text="📝 Inscripciones"
                        styleClass="nav-button" />
            </VBox>

            <!-- Espaciador para empujar el contenido inferior -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Footer del Sidebar -->
            <VBox styleClass="sidebar-footer" spacing="8">
                <padding>
                    <Insets top="16" left="16" right="16" bottom="16" />
                </padding>

                <Separator />

                <Button onAction="#cerrarSesion" prefWidth="248" text="🚪 Cerrar Sesión"
                        styleClass="nav-button-danger" />
            </VBox>
        </VBox>
    </left>

    <!-- ENCABEZADO SUPERIOR -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="16">
            <padding>
                <Insets top="20" left="32" right="32" bottom="20" />
            </padding>

            <!-- Título de la sección actual -->
            <Label fx:id="tituloSeccion" text="Dashboard"
                   styleClass="title-medium">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <!-- Espaciador -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Información del usuario -->
            <HBox alignment="CENTER_RIGHT" spacing="12">
                <Label fx:id="usuarioActual" text="Usuario: Administrador"
                       styleClass="subtitle">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <Label fx:id="fechaActual" text="30 Ago 2025"
                       styleClass="body-text">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </HBox>
        </HBox>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <StackPane fx:id="contenidoPrincipal" styleClass="content-area">
            <padding>
                <Insets top="32" left="32" right="32" bottom="32" />
            </padding>
<VBox styleClass="form-container" spacing="20" 
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <padding>
        <Insets top="30" left="30" right="30" bottom="30" />
    </padding>
    
    <!-- Header con título y botón agregar -->
    <HBox alignment="CENTER_LEFT">
        <Label text="Gestión de Programas Académicos" styleClass="title-medium">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <Region>
            <HBox.hgrow>ALWAYS</HBox.hgrow>
        </Region>
        
        <Button fx:id="btnAgregar" text="Agregar"
                styleClass="modern-button, button-success" />
    </HBox>
    
    <!-- Tabla de programas -->
    <TableView fx:id="tablaProgramas" styleClass="table-view" prefHeight="400">
        <columns>
            <TableColumn fx:id="colID" prefWidth="100" text="CÓDIGO" />
            <TableColumn fx:id="colNombre" prefWidth="250" text="NOMBRE PROGRAMA" />
            <TableColumn fx:id="colDuracion" prefWidth="100" text="DURACIÓN" />
            <TableColumn fx:id="colRegistro" prefWidth="100" text="REGISTRO" />
            <TableColumn fx:id="colFacultad" prefWidth="180" text="FACULTAD" />
        </columns>
    </TableView>
    
</VBox>
        </StackPane>
    </center>
</BorderPane>