<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.TilePane?>
<BorderPane prefHeight="800" prefWidth="1200" stylesheets="@../styles/profesor.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controllerFXML.InicioController">
    
    <!-- MENÚ LATERAL -->
    <left>
        <VBox styleClass="sidebar" maxWidth="280.0" minWidth="280.0" prefWidth="280.0">
            
            
            <Separator styleClass="sidebar-separator" />
            
            <!-- Navegación Principal -->
            <VBox styleClass="nav-section" spacing="4">
                <padding>
                    <Insets top="16" left="16" right="16" bottom="8" />
                </padding>
                
                <Label text="MENÚ PRINCIPAL" styleClass="nav-section-title">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                
                <Button onAction="#mostrarInicio" prefWidth="248" text="🏠 Inicio"
                        styleClass="nav-button" />
                <Button onAction="#mostrarProfesores" prefWidth="248" text="👨‍🏫 Profesores" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarEstudiantes" prefWidth="248" text="👨‍🎓 Estudiantes" 
                        styleClass="nav-button" />
            </VBox>
            
            <Separator styleClass="nav-separator" />
            
            <!-- Navegación Académica -->
            <VBox styleClass="nav-section" spacing="4">
                <padding>
                    <Insets top="8" left="16" right="16" bottom="8" />
                </padding>
                
                <Label text="GESTIÓN ACADÉMICA" styleClass="nav-section-title">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                
                <Button onAction="#mostrarFacultades" prefWidth="248" text="🏛️ Facultades" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarProgramas" prefWidth="248" text="📚 Programas" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarCursos" prefWidth="248" text="📖 Cursos" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarInscripciones" prefWidth="248" text="📝 Inscripciones" 
                        styleClass="nav-button" />
            </VBox>
            
            <!-- Espaciador para empujar el contenido inferior -->
            <Region VBox.vgrow="ALWAYS" />
            
            <!-- Footer del Sidebar -->
            <VBox styleClass="sidebar-footer" spacing="8">
                <padding>
                    <Insets top="16" left="16" right="16" bottom="16" />
                </padding>

                <Label fx:id="usuarioActual" text="  Usuario: Administrador"
                       styleClass="subtitle">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                
                <Separator />
                
                <Button onAction="#cerrarSesion" prefWidth="248" text="🚪 Cerrar Sesión" 
                        styleClass="nav-button-danger" />
            </VBox>
        </VBox>
    </left>
    
    <!-- ENCABEZADO SUPERIOR -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="16">
            <padding>
                <Insets top="20" left="32" right="32" bottom="20" />
            </padding>
            
            <!-- Título de la sección actual -->
            <Label fx:id="tituloSeccion" text="Universidad De Los Llanos"
                   styleClass="title-medium">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            
            <!-- Espaciador -->
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Información del usuario (opcional) -->
            <HBox alignment="CENTER_RIGHT" spacing="12">


                <Label fx:id="fechaActual"
                       styleClass="body-text">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </HBox>
        </HBox>
    </top>
    
    <!-- CONTENIDO CENTRAL -->
    <center>
        <StackPane fx:id="contenidoPrincipal" styleClass="content-area">
            <padding>
                <Insets top="32" left="32" right="32" bottom="32" />
            </padding>
            
            <!-- Contenido por defecto (Dashboard) -->
            <VBox styleClass="dashboard-container" spacing="24" alignment="TOP_CENTER">
                <!-- Card de bienvenida -->
                <VBox styleClass="card welcome-card" spacing="16" maxWidth="800">
                    <padding>
                        <Insets top="32" left="32" right="32" bottom="32" />
                    </padding>
                    
                    <Label text="🎓 Bienvenido al Sistema" styleClass="title-large">
                        <font>
                            <Font name="System Bold" size="32.0" />
                        </font>
                    </Label>
                    
                    <Label text="Gestiona eficientemente estudiantes, profesores, facultades, programas académicos, cursos e incripciones a cursos desde una sola plataforma."
                           styleClass="subtitle" wrapText="true">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    
                </VBox>
                
                <!-- Cards de estadísticas rápidas -->
                <TilePane hgap="24" vgap="24" prefColumns="2" alignment="CENTER">
                    <!-- Card Estudiantes -->
                    <VBox styleClass="card stat-card" spacing="8" prefWidth="200" alignment="CENTER">
                        <padding>
                            <Insets top="24" left="24" right="24" bottom="24" />
                        </padding>

                        <Label fx:id="totalEstudiantes" styleClass="stat-number">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Estudiantes" styleClass="stat-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </VBox>
                    
                    <!-- Card Profesores -->
                    <VBox styleClass="card stat-card" spacing="8" prefWidth="200"  alignment="CENTER">
                        <padding>
                            <Insets top="24" left="24" right="24" bottom="24" />
                        </padding>
                        
                        <Label fx:id="totalProfesores" styleClass="stat-number">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Profesores" styleClass="stat-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </VBox>

                    <!-- Card Facultades -->
                    <VBox styleClass="card stat-card" spacing="8" prefWidth="200" alignment="CENTER">
                        <padding>
                            <Insets top="24" left="24" right="24" bottom="24" />
                        </padding>

                        <Label fx:id="totalFacultades" styleClass="stat-number">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Facultades" styleClass="stat-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </VBox>

                    <!-- Card Programas -->
                    <VBox styleClass="card stat-card" spacing="8" prefWidth="200" alignment="CENTER">
                        <padding>
                            <Insets top="24" left="24" right="24" bottom="24" />
                        </padding>

                        <Label fx:id="totalProgramas" styleClass="stat-number">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Cursos" styleClass="stat-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </VBox>
                    
                    <!-- Card Cursos -->
                    <VBox styleClass="card stat-card" spacing="8" prefWidth="200" alignment="CENTER">
                        <padding>
                            <Insets top="24" left="24" right="24" bottom="24" />
                        </padding>
                        
                        <Label fx:id="totalCursos" text="156" styleClass="stat-number">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Cursos" styleClass="stat-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </VBox>

                    <!-- Card Inscripciones -->
                    <VBox styleClass="card stat-card" spacing="8" prefWidth="200" alignment="CENTER">
                        <padding>
                            <Insets top="24" left="24" right="24" bottom="24" />
                        </padding>

                        <Label fx:id="totalInscripciones" text="156" styleClass="stat-number">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Inscripciones a Cursos" styleClass="stat-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </VBox>

                </TilePane>
            </VBox>
        </StackPane>
    </center>
</BorderPane>