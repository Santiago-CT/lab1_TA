<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="800" prefWidth="1200" stylesheets="@../styles/profesor.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controllerFXML.ShowEstudianteController">

    <!-- MENÚ LATERAL -->
    <left>
        <VBox styleClass="sidebar" minWidth="50.0" prefWidth="80.0" maxWidth="100.0">
            <Separator styleClass="sidebar-separator" />

            <!-- Navegación Principal -->
            <VBox styleClass="nav-section" spacing="4">
                <padding>
                    <Insets top="6.0" left="6.0" right="6.0" bottom="6.0" />
                </padding>

                <Label text="MENÚ PRINCIPAL" styleClass="nav-section-title">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>

                <Button fx:id="btnInicio" onAction="#mostrarInicio" text="Inicio"
                        styleClass="nav-button" />
                <Button fx:id="btnProfesores" onAction="#mostrarProfesores" text="Profesores"
                        styleClass="nav-button" />
                <Button fx:id="btnEstudiantes" onAction="#mostrarEstudiantes" text="Estudiantes"
                        styleClass="nav-button" />
            </VBox>

            <Separator styleClass="nav-separator" />

            <!-- Navegación Académica -->
            <VBox styleClass="nav-section" spacing="4">
                <padding>
                    <Insets top="6.0" left="6.0" right="6.0" bottom="6.0" />
                </padding>

                <Label text="GESTIÓN ACADÉMICA" styleClass="nav-section-title">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>

                <Button fx:id="btnFacultades" onAction="#mostrarFacultades" text="Facultades"
                        styleClass="nav-button" />
                <Button fx:id="btnProgramas" onAction="#mostrarProgramas" text="Programas"
                        styleClass="nav-button" />
                <Button fx:id="btnCursos" onAction="#mostrarCursos" text="Cursos"
                        styleClass="nav-button" />
                <Button fx:id="btnInscripciones" onAction="#mostrarInscripciones" text="Inscripciones"
                        styleClass="nav-button" />
            </VBox>

            <!-- Espaciador responsive -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Footer del Sidebar responsive -->
            <VBox styleClass="nav-section" spacing="6">
                <Label fx:id="db_name" styleClass="subtitle" text="Database">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <Label text="Usuario: Administrador"
                       styleClass="subtitle">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>

                <Separator />

                <Button onAction="#cerrarSesion" text="Cerrar Sesión"
                        styleClass="nav-button-danger" />
            </VBox>
        </VBox>
    </left>

    <!-- ENCABEZADO SUPERIOR -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="16">
            <padding>
                <Insets top="20" left="32" right="32" bottom="20"/>
            </padding>

            <!-- Título de la sección actual -->
            <Label fx:id="tituloSeccion" text="Universidad De Los Llanos"
                   styleClass="title-medium">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <!-- Espaciador -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Información del usuario (opcional) -->
            <HBox alignment="CENTER_RIGHT" spacing="12">


                <Label fx:id="fechaActual" text="30 Ago 2025"
                       styleClass="body-text">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </HBox>
        </HBox>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <StackPane fx:id="contenidoPrincipal" styleClass="content-area">
            <padding>
                <Insets top="32" left="32" right="32" bottom="32"/>
            </padding>

            <VBox styleClass="dashboard-container" spacing="24" alignment="TOP_CENTER">
                <padding>
                    <Insets top="30" left="30" right="30" bottom="30"/>
                </padding>

                <!-- Header con título y botón agregar -->
                <HBox alignment="CENTER_LEFT">
                    <Label text="🏛️ Gestión de Estudiantes" styleClass="title-medium">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>

                    <Region>
                        <HBox.hgrow>ALWAYS</HBox.hgrow>
                    </Region>

                    <Button fx:id="btnAgregarEstudiante" text="Agregar"
                            styleClass="modern-button, button-success"/>
                </HBox>

                <!-- Tabla de estudiantes -->
                <TableView fx:id="tablaEstudiantes" styleClass="table-view" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colCodigo" prefWidth="100" text="CÓDIGO"/>
                        <TableColumn fx:id="colNombre" prefWidth="200" text="NOMBRE COMPLETO"/>
                        <TableColumn fx:id="colEmail" prefWidth="200" text="EMAIL"/>
                        <TableColumn fx:id="colPrograma" prefWidth="180" text="PROGRAMA"/>
                        <TableColumn fx:id="colEstado" prefWidth="180" text="ACTIVO"/>
                        <TableColumn fx:id="colPromedio" prefWidth="180" text="PROMEDIO"/>
                    </columns>
                </TableView>

                <!-- Botones de acción -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Region>
                        <HBox.hgrow>ALWAYS</HBox.hgrow>
                    </Region>

                </HBox>

            </VBox>
        </StackPane>
    </center>
</BorderPane>