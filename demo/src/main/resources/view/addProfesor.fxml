<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" prefHeight="600.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/17.0.7"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controllerFXML.AddProfesorController"
            stylesheets="@../styles/profesor.css"
            styleClass="modal-container">

    <content>
        <VBox spacing="20.0" prefWidth="480.0">

            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <!-- Título -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label styleClass="icon-large" text="➕">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
                <Label styleClass="title-large" text="Agregar Nuevo Profesor">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>

            <Separator styleClass="form-separator" />

            <!-- Formulario -->
            <VBox spacing="15.0" styleClass="form-container">

                <!-- ID del Profesor -->
                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="ID *">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtID" prefHeight="35.0" promptText="Ingrese el ID" styleClass="form-field" />
                </VBox>

                <!-- Nombres -->
                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="Nombres *">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtNombres" prefHeight="35.0" promptText="Nombres del profesor" styleClass="form-field" />
                </VBox>

                <!-- Apellidos -->
                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="Apellidos *">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtApellidos" prefHeight="35.0" promptText="Apellidos del Profesor" styleClass="form-field" />
                </VBox>

                <!-- Email -->
                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="Email *">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtEmail" prefHeight="35.0" promptText="ejemplo@unillanos.edu.co" styleClass="form-field" />
                </VBox>

                <!-- Tipo de Contrato -->
                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="Tipo de Contrato *">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="cmbTipoContrato" prefHeight="35.0" prefWidth="440.0" promptText="Seleccione el tipo de contrato" styleClass="form-field" />
                </VBox>

                <!-- Mensaje de campos requeridos -->
                <Label styleClass="help-text" text="* Campos requeridos">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Separador -->
            <Separator styleClass="form-separator" />

            <!-- Botones de acción -->
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Button fx:id="btnCancelar" onAction="#cancelar" prefHeight="40.0" prefWidth="120.0" styleClass="modern-button, button-secondary" text="❌ Cancelar" />
                <Button fx:id="btnGuardar" onAction="#save" prefHeight="40.0" prefWidth="120.0" styleClass="modern-button, button-success" text="💾 Guardar" />
            </HBox>

            <!-- Mensaje de estado -->
            <Label fx:id="lblMensaje" styleClass="message-label" wrapText="true" />

        </VBox>
    </content>
</ScrollPane>
