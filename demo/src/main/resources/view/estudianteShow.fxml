                <!-- Header con título y botón agregar -->
                <HBox alignment="CENTER_LEFT">
                    <Label text="👨‍🎓 Gestión de Estudiantes" styleClass="title-medium">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>

                    <Region>
                        <HBox.hgrow>ALWAYS</HBox.hgrow>
                    </Region>

                    <Button fx:id="btnAgregarEstudiante" text="➕ Agregar Estudiante"
