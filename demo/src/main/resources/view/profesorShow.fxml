<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800" prefWidth="1200" stylesheets="@../styles/profesor.css" 
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.controller.PersonaController">
    
    <!-- MENÚ LATERAL -->
    <left>
        <VBox styleClass="sidebar" maxWidth="280.0" minWidth="280.0" prefWidth="280.0">
            
            
            <Separator styleClass="sidebar-separator" />
            
            <!-- Navegación Principal -->
            <VBox styleClass="nav-section" spacing="4">
                <padding>
                    <Insets top="16" left="16" right="16" bottom="8" />
                </padding>
                
                <Label text="MENÚ PRINCIPAL" styleClass="nav-section-title">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                
                <Button onAction="#mostrarInicio" prefWidth="248" text="🏠 Dashboard" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarProfesores" prefWidth="248" text="👨‍🏫 Profesores" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarEstudiantes" prefWidth="248" text="👨‍🎓 Estudiantes" 
                        styleClass="nav-button" />
            </VBox>
            
            <Separator styleClass="nav-separator" />
            
            <!-- Navegación Académica -->
            <VBox styleClass="nav-section" spacing="4">
                <padding>
                    <Insets top="8" left="16" right="16" bottom="8" />
                </padding>
                
                <Label text="GESTIÓN ACADÉMICA" styleClass="nav-section-title">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                
                <Button onAction="#mostrarFacultades" prefWidth="248" text="🏛️ Facultades" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarProgramas" prefWidth="248" text="📚 Programas" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarCursos" prefWidth="248" text="📖 Cursos" 
                        styleClass="nav-button" />
                <Button onAction="#mostrarInscripciones" prefWidth="248" text="📝 Inscripciones" 
                        styleClass="nav-button" />
            </VBox>
            
            <!-- Espaciador para empujar el contenido inferior -->
            <Region VBox.vgrow="ALWAYS" />
            
            <!-- Footer del Sidebar -->
            <VBox styleClass="sidebar-footer" spacing="8">
                <padding>
                    <Insets top="16" left="16" right="16" bottom="16" />
                </padding>
                
                <Separator />
                
                <Button onAction="#cerrarSesion" prefWidth="248" text="🚪 Cerrar Sesión" 
                        styleClass="nav-button-danger" />
            </VBox>
        </VBox>
    </left>
    
    <!-- ENCABEZADO SUPERIOR -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="16">
            <padding>
                <Insets top="20" left="32" right="32" bottom="20" />
            </padding>
            
            <!-- Título de la sección actual -->
            <Label fx:id="tituloSeccion" text="Dashboard" 
                   styleClass="title-medium">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            
            <!-- Espaciador -->
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- Información del usuario -->
            <HBox alignment="CENTER_RIGHT" spacing="12">
                <Label fx:id="usuarioActual" text="Usuario: Administrador" 
                       styleClass="subtitle">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                
                <Label fx:id="fechaActual" text="30 Ago 2025" 
                       styleClass="body-text">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </HBox>
        </HBox>
    </top>
    
    <!-- CONTENIDO CENTRAL -->
    <center>
        <StackPane fx:id="contenidoPrincipal" styleClass="content-area">
            <padding>
                <Insets top="32" left="32" right="32" bottom="32" />
            </padding>
            
            <!-- Contenido por defecto -->
            <VBox styleClass="dashboard-container" spacing="24" alignment="TOP_CENTER">
                <HBox alignment="CENTER_LEFT">
                    <Label text="👨‍🏫 Listado de Profesores" styleClass="title-medium">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
        
                    <Region>
                        <HBox.hgrow>ALWAYS</HBox.hgrow>
                    </Region>
        
                    <Button fx:id="btnAgregar" text="➕ Agregar Profesor" 
                            styleClass="modern-button, button-success" />
                </HBox>
    
                <!-- Tabla de profesores -->
                <TableView fx:id="tablaProfesores" styleClass="table-view" prefHeight="500" >
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="150" text="ID" />
                        <TableColumn fx:id="colNombres" prefWidth="200" text="NOMBRES" />
                        <TableColumn fx:id="colApellidos" prefWidth="200" text="APELLIDOS" />
                        <TableColumn fx:id="colEmail" prefWidth="220" text="EMAIL" />
                        <TableColumn fx:id="colTipoContrato" prefWidth="150" text="TIPO CONTRATO" />
                    </columns>
                </TableView>
    
                <!-- Botones de acción -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Button fx:id="btnEditar" text="✏️ Editar" 
                            styleClass="modern-button, button-secondary" />
                    <Button fx:id="btnEliminar" text="🗑️ Eliminar" 
                            styleClass="modern-button, button-danger" />
                    <Button fx:id="btnVerDetalles" text="👁️ Ver Detalles" 
                            styleClass="modern-button" />
        
                    <Region>
                        <HBox.hgrow>ALWAYS</HBox.hgrow>
                    </Region>
        
                    <!-- Botones adicionales -->
                    <Button fx:id="btnExportar" text="📄 Exportar" 
                            styleClass="modern-button, button-secondary" />
                    <Button fx:id="btnImprimir" text="🖨️ Imprimir" 
                            styleClass="modern-button, button-secondary" />
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>