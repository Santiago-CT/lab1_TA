<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox styleClass="form-container" spacing="20" 
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <padding>
        <Insets top="30" left="30" right="30" bottom="30" />
    </padding>
    
    <!-- Header con título y botón agregar -->
    <HBox alignment="CENTER_LEFT">
        <Label text="📝 Gestión de Inscripciones" styleClass="title-medium">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <Region>
            <HBox.hgrow>ALWAYS</HBox.hgrow>
        </Region>
        
        <Button fx:id="btnNuevaInscripcion" text="➕ Nueva Inscripción" 
                styleClass="modern-button, button-success" />
    </HBox>
    
    <!-- Panel de filtros -->
    <VBox styleClass="card" spacing="16">
        <padding>
            <Insets top="20" left="20" right="20" bottom="20" />
        </padding>
        
        <Label text="🔍 Filtros de Búsqueda" styleClass="title-small">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        
        <VBox spacing="12">
            <!-- Primera fila de filtros -->
            <HBox spacing="16" alignment="CENTER_LEFT">
                <VBox spacing="6">
                    <Label text="Código estudiante:" styleClass="body-text" />
                    <TextField fx:id="txtCodigoEstudiante" promptText="Código..." 
                              prefWidth="150" />
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Nombre estudiante:" styleClass="body-text" />
                    <TextField fx:id="txtNombreEstudiante" promptText="Nombre..." 
                              prefWidth="180" />
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Programa:" styleClass="body-text" />
                    <ComboBox fx:id="cmbPrograma" promptText="Todos" 
                             prefWidth="160" />
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Período:" styleClass="body-text" />
                    <ComboBox fx:id="cmbPeriodo" promptText="2024-II" 
                             prefWidth="120" />
                </VBox>
            </HBox>
            
            <!-- Segunda fila de filtros -->
            <HBox spacing="16" alignment="CENTER_LEFT">
                <VBox spacing="6">
                    <Label text="Curso:" styleClass="body-text" />
                    <ComboBox fx:id="cmbCurso" promptText="Todos los cursos" 
                             prefWidth="200" />
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Estado:" styleClass="body-text" />
                    <ComboBox fx:id="cmbEstado" promptText="Todos" 
                             prefWidth="140" />
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Desde:" styleClass="body-text" />
                    <DatePicker fx:id="fechaDesde" prefWidth="140" />
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Hasta:" styleClass="body-text" />
                    <DatePicker fx:id="fechaHasta" prefWidth="140" />
                </VBox>
                
                <VBox spacing="6">
                    <Label text=" " />
                    <Button fx:id="btnBuscar" text="🔍 Buscar" 
                            styleClass="modern-button" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
    
    <!-- Tabla de inscripciones -->
    <TableView fx:id="tablaInscripciones" styleClass="table-view" prefHeight="350">
        <columns>
            <TableColumn fx:id="colId" prefWidth="80" text="ID" />
            <TableColumn fx:id="colCodigoEstudiante" prefWidth="120" text="CÓDIGO EST." />
            <TableColumn fx:id="colNombreEstudiante" prefWidth="180" text="NOMBRE ESTUDIANTE" />
            <TableColumn fx:id="colCodigoCurso" prefWidth="100" text="CÓD. CURSO" />
            <TableColumn fx:id="colNombreCurso" prefWidth="180" text="NOMBRE CURSO" />
            <TableColumn fx:id="colPeriodo" prefWidth="100" text="PERÍODO" />
            <TableColumn fx:id="colFechaInscripcion" prefWidth="120" text="FECHA INSC." />
            <TableColumn fx:id="colEstado" prefWidth="100" text="ESTADO" />
            <TableColumn fx:id="colNota" prefWidth="80" text="NOTA" />
        </columns>
    </TableView>
    
    <!-- Botones de acción -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button fx:id="btnModificar" text="✏️ Modificar" 
                styleClass="modern-button, button-secondary" />
        <Button fx:id="btnCancelar" text="❌ Cancelar Inscripción" 
                styleClass="modern-button, button-danger" />
        <Button fx:id="btnVerDetalles" text="👁️ Ver Detalles" 
                styleClass="modern-button" />
        <Button fx:id="btnCalificar" text="📊 Calificar" 
                styleClass="modern-button, button-secondary" />
        <Button fx:id="btnHistorial" text="📋 Historial" 
                styleClass="modern-button, button-secondary" />
        
        <Region>
            <HBox.hgrow>ALWAYS</HBox.hgrow>
        </Region>
        
        <Button fx:id="btnInscripcionMasiva" text="📋 Inscripción Masiva" 
                styleClass="modern-button, button-warning" />
        <Button fx:id="btnReporteInscripciones" text="📊 Reportes" 
                styleClass="modern-button, button-secondary" />
    </HBox>
    
    <!-- Panel de estadísticas -->
    <HBox spacing="20" alignment="CENTER">
        <VBox styleClass="card" spacing="8" prefWidth="150" alignment="CENTER">
            <padding>
                <Insets top="16" left="16" right="16" bottom="16" />
            </padding>
            
            <Label text="1,847" styleClass="stat-number" style="-fx-text-fill: #1e40af;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label text="Total Inscripciones" styleClass="stat-label">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </VBox>
        
        <VBox styleClass="card" spacing="8" prefWidth="150" alignment="CENTER">
            <padding>
                <Insets top="16" left="16" right="16" bottom="16" />
            </padding>
            
            <Label text="1,756" styleClass="stat-number" style="-fx-text-fill: #10b981;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label text="Activas" styleClass="stat-label">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </VBox>
        
        <VBox styleClass="card" spacing="8" prefWidth="150" alignment="CENTER">
            <padding>
                <Insets top="16" left="16" right="16" bottom="16" />
            </padding>
            
            <Label text="67" styleClass="stat-number" style="-fx-text-fill: #ef4444;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label text="Canceladas" styleClass="stat-label">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </VBox>
        
        <VBox styleClass="card" spacing="8" prefWidth="150" alignment="CENTER">
            <padding>
                <Insets top="16" left="16" right="16" bottom="16" />
            </padding>
            
            <Label text="24" styleClass="stat-number" style="-fx-text-fill: #f59e0b;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label text="Pendientes" styleClass="stat-label">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </VBox>
        
        <VBox styleClass="card" spacing="8" prefWidth="150" alignment="CENTER">
            <padding>
                <Insets top="16" left="16" right="16" bottom="16" />
            </padding>
            
            <Label text="94%" styleClass="stat-number" style="-fx-text-fill: #10b981;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label text="Tasa Éxito" styleClass="stat-label">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </VBox>
        
        <VBox styleClass="card" spacing="8" prefWidth="150" alignment="CENTER">
            <padding>
                <Insets top="16" left="16" right="16" bottom="16" />
            </padding>
            
            <Label text="4.1" styleClass="stat-number" style="-fx-text-fill: #0ea5e9;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label text="Nota Promedio" styleClass="stat-label">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </VBox>
    </HBox>
    
</VBox>