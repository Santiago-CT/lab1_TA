<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" styleClass="form-container" prefHeight="450.0" prefWidth="500.0"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.EditarFacultadController">

<padding>
    <Insets top="30" left="30" right="30" bottom="30" />
</padding>

<!-- Título -->
<VBox spacing="5" alignment="CENTER">
    <Label text="Editar Facultad" styleClass="title-large">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>
    <Label text="Modifica los datos de la facultad seleccionada" styleClass="subtitle">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
</VBox>

<Separator />

<VBox spacing="20">

    <!-- ID Facultad -->
    <VBox spacing="8">
        <Label text="ID de la Facultad" styleClass="form-label">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtID" promptText="ID generado automáticamente"
                   styleClass="form-field-readonly" editable="false" prefHeight="40.0">
            <font>
                <Font size="13.0" />
            </font>
        </TextField>
    </VBox>

    <!-- Nombre -->
    <VBox spacing="8">
        <Label text="Nombre *" styleClass="form-label">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtNombre" promptText="Ingrese el nombre de la facultad"
                   styleClass="form-field" prefHeight="40.0">
            <font>
                <Font size="13.0" />
            </font>
        </TextField>
    </VBox>

    <!-- Decano -->
    <VBox spacing="8">
        <Label text="Decano *" styleClass="form-label">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <ComboBox fx:id="cmbDecano" promptText="Seleccione un decano"
                  styleClass="form-combo" prefHeight="40.0" maxWidth="Infinity" />
    </VBox>
</VBox>

<!-- Nota -->
<HBox spacing="8" alignment="CENTER_LEFT" styleClass="info-box">
    <Label text="ℹ️" styleClass="info-icon">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    <Label text="Los campos marcados con (*) son obligatorios" styleClass="info-text">
        <font>
            <Font size="12.0" />
        </font>
    </Label>
</HBox>

<Separator />

<!-- Botones -->
<HBox spacing="15" alignment="CENTER_RIGHT">
    <Button fx:id="btnCancelar" text="Cancelar" styleClass="button-secondary"
            prefHeight="45.0" prefWidth="120.0" />
    <Button fx:id="btnGuardar" text="Guardar Cambios" styleClass="button-primary"
            prefHeight="45.0" prefWidth="150.0" />
</HBox>
</VBox>
